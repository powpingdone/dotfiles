CC="clang"
CXX="clang++"
AR="llvm-ar"
NM="llvm-nm"
RANLIB="llvm-ranlib"
LD="/usr/bin/ld.lld"
LDFLAGS="-Wl,-O2 -Wl,--as-needed -fuse-ld=lld -Wl,-v -Wl,-error-limit=0"
CFLAGS="-O2 -march=native -pipe -fuse-ld=lld -flto=thin"
CXXFLAGS="${CFLAGS}"
FCFLAGS="${CFLAGS}"
FFLAGS="${CFLAGS}"

RUSTFLAGS="-C codegen-units=${NTHREADS} -Z thinlto -C linker-plugin-lto -Clinker=clang -Clink-arg=-fuse-ld=lld ${RUSTFLAGS}"
