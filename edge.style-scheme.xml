<style-scheme id="edge" name="Edge" version="1.0">

  <author>Aidan Case</author>
  <description>Dark color scheme, based on the vim color scheme of the same name by sainnhe on github</description>

  <!-- edge pallette -->
  <color name="black"                        value="#202023"/>
  <color name="bg0"                          value="#2c2e34"/>
  <color name="bg1"                          value="#33353f"/>
  <color name="bg2"                          value="#363944"/>
  <color name="bg3"                          value="#3b3e48"/>
  <color name="bg4"                          value="#414550"/>
  <color name="bg_grey"                      value="#828a98"/>
  <color name="bg_red"                       value="#ec7279"/>
  <color name="diff_red"                     value="#55393d"/>
  <color name="bg_green"                     value="#a0c980"/>
  <color name="diff_green"                   value="#394634"/>
  <color name="bg_blue"                      value="#6cb6eb"/>
  <color name="diff_blue"                    value="#354157"/>
  <color name="bg_purple"                    value="#d38aea"/>
  <color name="diff_yellow"                  value="#4e432f"/>
  <color name="fg"                           value="#c5cdd9"/>
  <color name="red"                          value="#ec7279"/>
  <color name="yellow"                       value="#deb974"/>
  <color name="green"                        value="#a0c980"/>
  <color name="cyan"                         value="#5dbbc1"/>
  <color name="blue"                         value="#6cb6eb"/>
  <color name="purple"                       value="#d38aea"/>
  <color name="grey"                         value="#7f8490"/>
  <color name="grey_dim"                     value="#5b616e"/>
  <!-- <color name="none"                         value="NONE"/> **NULL color -->

  <!-- Global Settings -->
  <style name="text"                        foreground="fg" background="bg0"/>
  <style name="selection"                   background="bg3"/>
  <style name="cursor"                      foreground="fg"/>
  <style name="current-line"                background="bg1"/>
  <style name="current-line-number"         background="grey"/>
  <style name="line-numbers"                foreground="grey" background="bg0"/>
  <style name="draw-spaces"                 foreground="bg4"/>
  <style name="background-pattern"          background="bg_grey"/>
  <!-- uk -->
  <style name="map-overlay"                 background="#rgba(136,138,133,0.25)"/>

  <!-- Diagnostics Underlining -->
  <style name="diagnostician::deprecated"   underline="error" underline-color="fg"/>
  <style name="diagnostician::unused"       underline="error" underline-color="grey"/>
  <style name="diagnostician::error"        underline="error" underline-color="red"/>
  <style name="diagnostician::note"         underline="error" underline-color="blue"/>
  <style name="diagnostician::warning"      underline="error" underline-color="yellow"/>

  <!-- Debugger -->
  <style name="debugger::current-breakpoint" foreground="bg0" background="diff_red"/>
  <style name="debugger::breakpoint"         foreground="bg0" background="bg_red"/>
  
  <!-- Search Matching -->
  <!-- Liberty Taken: Edge uses alternating colors when doing a Search (bg_green and bg_blue
       for selected and unselected) but because the same color is used for selection as the
       "Found Selected" color its impossible to represent. Use bg_green as a blanket.-->
  <style name="search-match"                foreground="bg0" background="bg_green"/>
  <!-- bg_green .25 transparent -->
  <style name="quick-highlight-match"       background="#rgba(160,201,128,.25)"/> 
  
  <!-- Hover links *possibly incorrect* -->
  <style name="action::hover-definition"    background="bg4" underline="true"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="fg" bold="true"/>
  <style name="bracket-mismatch"            foreground="purple" bold="true"/>
  
  <!-- Right Margin uk -->
  <style name="right-margin"                foreground="bg4" background="bg4"/>

  <!-- Search Shadow -->
  <style name="search-shadow"               background="#rgba(0,0,0,0.4)"/>

  <!-- Spellchecker Matching -->
  <style name="misspelled-match"            foreground="black" background="bg_blue"/>
  
  <!-- Comments -->
  <style name="def:comment"                 foreground="grey" italic="true"/>
  <style name="def:shebang"                 foreground="purple"/>
  <!-- uk -->
  <style name="def:doc-comment-element"     foreground="green"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="yellow" italic="true"/>
  <style name="def:string"                  foreground="green"/>
  <style name="def:character"               foreground="green"/>
  <style name="def:special-char"            foreground="yellow"/>
  <style name="def:floating-point"          foreground="green"/>
  <style name="def:function"                foreground="blue"/>
  <style name="def:macro-name"              foreground="yellow"/>
  <style name="def:enum-name"               foreground="yellow"/>
  <!-- uk -->
  <style name="def:special-constant"        foreground="cyan" italic="true"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="cyan" italic="true"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="purple"/>

  <!-- Types -->
  <style name="def:type"                    foreground="red"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="purple"/>
  <style name="def:error"                   background="diff_red" bold="true"/>
  <style name="def:warning"                 background="diff_yellow"/>
  <style name="def:note"                    background="diff_blue" bold="true"/>
  <style name="def:net-address"             italic="true" underline="true"/>
  <style name="def:keyword"                 foreground="purple"/>
  <style name="def:boolean"                 foreground="green"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->
  
  <!-- LaTeX -->
  <style name="latex:command"               foreground="red"/>

  <!-- Language specific -->
  <!-- C -->
  <style name="c:included-file"             foreground="purple"/>
  <style name="c:storage-class"             foreground="purple"/>
  
  <!-- Diff -->
  <style name="diff:added-line"             foreground="diff_green"/>
  <style name="diff:removed-line"           foreground="diff_red"/>
  <style name="diff:changed-line"           foreground="diff_yellow"/>
  <style name="diff:diff-file"              foreground="fg"/>
  <style name="diff:location"               foreground="diff_blue"/>
  <style name="diff:special-case"           foreground="fg"/>

  <!-- GTK Doc -->
  <style name="gtk-doc:function-name"       bold="true"/>
  <style name="gtk-doc:function"            bold="true"/>
  <style name="gtk-doc:parameter"           bold="true"/>
  <style name="gtk-doc:constant"            bold="true"/>
  <style name="gtk-doc:type"                bold="true"/>
  <style name="gtk-doc:since"               bold="true"/>
  <style name="gtk-doc:return"              bold="true"/>
  <style name="gtk-doc:deprecated"          bold="true"/>
  <style name="gtk-doc:signal-name"         bold="true"/>
  <style name="gtk-doc:property-name"       bold="true"/>

  <!-- Gutter -->
  <style name="gutter:added-line"           use-style="diff:added-line"/>
  <style name="gutter:changed-line"         use-style="diff:changed-line"/>
  <style name="gutter:removed-line"         use-style="diff:removed-line"/>

  <!-- JavaScript -->
  <style name="js:built-in-constructor"     foreground="cyan"/>
  <style name="js:keyword"                  foreground="def:keyword"/>
  <style name="js:string"                   foreground="def:string"/>
  <style name="js:template-literal"         foreground="yellow"/>
  <style name="js:built-in-function"        foreground="blue"/>
  <style name="js:built-in-method"          foreground="cyan" italic="true"/>

  <!-- Java -->
  <style name="java:null-value"             foreground="yellow" italic="true"/>
  <style name="java:type"                   foreground="red" italic="true"/>
  <style name="java:storage-class"          use-style="java:type"/>
  <style name="java:declaration"            use-style="java:type"/>
  <style name="java:scope-declaration"      foreground="purple"/>
  <style name="java:memory"                 foreground="purple"/>

  <!-- Rust -->
  <style name="rust:scope"                  foreground="red" italic="true"/>
  <style name="rust:type"                   foreground="red" italic="true"/>
  <style name="rust:lifetime"               foreground="yellow"/>
  <style name="rust:macro"                  foreground="cyan" italic="true"/>
  <style name="rust:attribute"              foreground="yellow"/>

  <!-- XML -->
  <style name="xml:doctype"                 foreground="grey"/>
  <style name="xml:cdata-delim"             foreground="grey"/>
  <style name="xml:tag"                     foreground="purple"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         bold="true"/>
  <style name="def:inline-code"             foreground="green"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="grey" underline="true"/>
  <style name="def:link-symbol"             foreground="purple"/>
  <style name="def:link-destination"        foreground="green" italic="true" underline="true"/>
  <style name="def:heading"                 foreground="purple" bold="true"/>
  <style name="def:thematic-break"          foreground="grey" bold="true"/>
  <style name="def:preformatted-section"    foreground="yellow"/>
  <style name="def:list-marker"             foreground="red"/>

</style-scheme>

