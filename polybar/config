module-margin = 0

modules-left = i3 split mpd
modules-center = title
modules-right = cpu split memory split date

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = %{F#fff}CPU: %{F#999} %percentage%%%{F#-}

[module/memory]
type = internal/memory
interval = 0.5
label = %{F#fff}RAM: %{F#999} %mb_used% / %mb_total% %{F#-}

[module/split]
type = custom/text
content = |
content-foreground = #777
content-padding = 2

[module/i3]
strip-wsnumbers = true
type = internal/i3
format = <label-state> <label-mode>

label-focused = %index%
label-focused-foreground = #cc6666
label-focused-background = #1d1f21
label-focused-underline = #fba922
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %I:%M %p

